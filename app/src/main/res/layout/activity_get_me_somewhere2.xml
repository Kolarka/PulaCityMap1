<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetMeSomewhere2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#4083A9">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="#4083A9"
            android:src="@drawable/ic_next"
            android:id="@+id/Im1"
            >


        </ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/Im1"
            android:text="Start"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/text_v1"
            >

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="85dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/relLayout1"
            android:background="@drawable/white_border">



            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ic_magny"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_magny">

            </ImageView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ic_magny"
                android:layout_marginLeft="10dp"
                android:id="@+id/search_text1"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                android:textColor="#000"
                android:background="@null"
                android:hint="Where are you going?"
                android:imeOptions="actionSearch"
                >

            </EditText>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>